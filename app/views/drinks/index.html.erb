<div class="container">
  <h2>The Tiki-Tiki Drinks List!</h2>
    <div class="content">
      <br>
      <table>
        <tr>
          <th align="left">Drink Name</th>
          <th>Creator</th>
        </tr>
        <% @drinks.each do |d| %>
        <tr>
          <td><a href="/drinks/<%= d.slug %>"><%= d.titlecaser %></a></td>
          <td><%= d.user.name %></td>
        </tr>
        <% end %>
      </table>
    </div>

    <div class="content">
      <br>
      <br>
      <p><a href="/users/<%= session[:id]%>">Go back</a> to your personal collection</p>
      <p><a href="/users/logout">Log out</a> of your account</p>
    </div>
  </div>
