<div class="container">
  <h2>Welcome back <%= @user.username%>!</h2>

    <div class="content">
      <h3>Your Drink collection:</h3>
      <ul>
        <% @user.drinks.each do |d| %>
          <li><a href="/drinks/<%= d.slug %>"><%= d.name %></a></li>
        <% end %>
      </ul>
    </div>

    <div class="content">
      <br>
      <p>Want to add a <a href="/drinks/new">new drink</a> to your collection?</p>
    </div>
  </div>
